{% extends 'base.html.twig' %}

{% block title %}Roles{% endblock %}

{% block body %}
    <div id="wrapper">
        <div class="container">
            <h1>Articles</h1>
            <div id="roles">
                {% for  article  in articles %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.body }}</p>
                            <p class="card-text">{{ article.user.pseudo }}</p>

                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}

{% block metas %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #roles{
            display: flex;
            flex-direction: column;
            width: 100%;
            margin: auto;
            align-items: center;
        }
        .card{
            width: 50px;
            margin-bottom: 5px;
            text-align: center;
        }

    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
